{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "lib": [
            "es6",
            "es7",
            "dom",
            "scripthost"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true
    },
    "include": [
        "src",
        "types"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.tsx"
    ]
}